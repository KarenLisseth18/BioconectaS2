{
  "name": "backend-biotecnologia",
  "version": "1.0.0",
  "description": "Backend de Bioconecta con NestJS + TypeORM + MySQL",
  "main": "dist/main.js",
  "scripts": {
    "start": "nest start",            
    "start:dev": "nest start --watch",   
    "start:prod": "node dist/main.js",    
    "build": "nest build",                
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/typeorm": "^11.0.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "multer": "^2.0.2",
    "mysql2": "^3.15.1",
    "typeorm": "^0.3.27"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.7",
    "@types/node": "^20.0.0",
    "typescript": "^5.6.3",
    "prettier": "^3.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0"
  }
}
